" autocontain -s dev.azure.com Work
" autocontain -s portal.azure.com Work
" autocontain -s nordnet.dk Banking
" autocontain -s lsb.dk Banking
" autocontain -s velliv.dk Banking
" autocontain -s linkedin.com LinkedIn
